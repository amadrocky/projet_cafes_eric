{% extends 'layoutAdmin.html.twig' %}

{% block title %}Liste des cafés{% endblock %}

{% block body %}
    <div class="container">
    <h1 class="admin-title">Liste des cafés</h1>
        <div class="mb-5 mt-5">
            <a class="btn btn-outline-dark" href="{{ path('coffee_new') }}"><i class="fa fa-plus"></i> Ajouter un nouveau café</a>
        </div>
    <table class="table">
        <thead>
            <tr>
                <th><i class="fas fa-globe-americas"></i> Région du monde</th>
                <th><i class="fas fa-flag"></i> Pays</th>
                <th><i class="fas fa-spa"></i> Terroir</th>
                <th><i class="fas fa-star"></i> Nouveauté</th>
                <th><i class="fas fa-heart"></i> Produit du mois</th>
                <th><i class="fas fa-tools"></i> Action</th>
            </tr>
        </thead>
        <tbody>
        {% for coffee in coffees %}
            <tr>
                <td class="col-md-3">{{ coffee.category.title }}</td>
                <td class="col-md-1">{{ coffee.country|country }}</td>
                <td class="col-md-2">{{ coffee.soil }}</td>
                {% if coffee.novelty == true %}
                    <td class="col-md-2"><a class="btn btn-outline-dark"
                           href="{{ path('coffee_novelty', {'id': coffee.id}) }}"><i class="fas fa-toggle-on"></i> On</a></td>
                {% else %}
                    <td class="col-md-2"><a class="btn btn-outline-dark"
                           href="{{ path('coffee_novelty', {'id': coffee.id}) }}"><i class="fas fa-toggle-off"></i> Off</a></td>
                {% endif %}
                {% if coffee.highlighted == true %}
                    <td class="col-md-3"><a class="btn btn-outline-dark"
                           href="{{ path('coffee_highlighted', {'id': coffee.id}) }}"><i class="fas fa-toggle-on"></i> On</a></td>
                {% else %}
                    <td class="col-md-3"><a class="btn btn-outline-dark"
                           href="{{ path('coffee_highlighted', {'id': coffee.id}) }}"><i class="fas fa-toggle-off"></i> Off</a></td>
                {% endif %}
                <td class="col-md-1">
                    <a class="btn btn-outline-dark" href="{{ path('coffee_edit', {'id': coffee.id}) }}"><i class="fas fa-pencil-alt"></i> Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Aucun café enregistré</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
