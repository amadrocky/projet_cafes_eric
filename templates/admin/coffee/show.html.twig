{% extends 'layoutAdmin.html.twig' %}

{% block title %}Détail d'un café{% endblock %}

{% block body %}
    <h1 class="admin-title">Fiche produit</h1>
    <div class="row">
        <div class="col-md-12 mb-5 mt-5">
            <table class="table">
                <tbody>
                <tr>
                    <th>Région du monde</th>
                    <td>{{ coffee.category.title }}</td>
                </tr>
                <tr>
                    <th>Pays</th>
                    <td>{{ coffee.country|country }}</td>
                </tr>
                <tr>
                    <th>Terroir</th>
                    <td>{{ coffee.soil }}</td>
                </tr>
                <tr>
                    <th>Variété</th>
                    <td>{{ coffee.variety }}</td>
                </tr>
                <tr>
                    <th>Note de dégustation</th>
                    <td>{{ coffee.tastingNote }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ coffee.description }}</td>
                </tr>
                <tr>
                    <th>Produit du mois</th>
                    <td>{{ coffee.highlighted ? 'Oui' : 'Non' }}</td>
                </tr>
                <tr>
                    <th>Nouveauté</th>
                    <td>{{ coffee.novelty ? 'Oui' : 'Non' }}</td>
                </tr>
                <tr>
                    <th class="col-md-2">Image de profil</th>
                    <td class="col-md-10"><img src="{{ vich_uploader_asset(coffee, 'coffeeImageFile') }}" alt="photo du produit" /></td>
                </tr>
                </tbody>
            </table>
        <a class="btn btn-outline-dark" href="{{ path('coffee_edit', {'id': coffee.id}) }}"><i class="fas fa-pencil-alt"></i> Éditer</a>
        {{ include('admin/coffee/_delete_form.html.twig') }}
        </div>
        <div class="col-md-12 mb-5">
            <a class="btn btn-outline-dark" href="{{ path('coffee_index') }}"><i class="fas fa-reply"></i> Retour</a>
        </div>
    </div>
{% endblock %}
