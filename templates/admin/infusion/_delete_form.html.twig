<form class="d-inline" method="post" action="{{ path('infusion_delete', {'id': infusion.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette infusion?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ infusion.id) }}">
    <button class="btn btn-outline-dark"><i class="far fa-trash-alt"></i> Supprimer</button>
</form>
