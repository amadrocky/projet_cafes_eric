<form class="d-inline" method="post" action="{{ path('tea_delete', {'id': tea.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce thé?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tea.id) }}">
    <button class="btn btn-outline-dark"><i class="far fa-trash-alt"></i> Supprimer</button>
</form>
