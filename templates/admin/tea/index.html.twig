{% extends 'layoutAdmin.html.twig' %}

{% block title %}Liste des thés{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="admin-title">Liste des thés</h1>
        <div class="mb-5 mt-5">
            <a class="btn btn-outline-dark" href="{{ path('tea_new') }}"><i class="fa fa-plus"></i> Ajouter un nouveau thé</a>
        </div>
        <table class="table">
            <thead>
            <tr>
                <th><i class="fas fa-tag"></i> Famille</th>
                <th><i class="fas fa-scroll"></i> Titre</th>
                <th><i class="fas fa-leaf"></i> Nom</th>
                <th><i class="fas fa-star"></i> Nouveauté</th>
                <th><i class="fas fa-heart"></i> Produit du mois</th>
                <th><i class="fas fa-tools"></i> Action</th>
            </tr>
            </thead>
            <tbody>
            {% for tea in teas %}
                <tr>
                    <td class="col-md-2">{{ tea.familyTea.name }}</td>
                    <td class="col-md-2">{{ tea.category.title }}</td>
                    <td class="col-md-2">{{ tea.name }}</td>
                    {% if tea.novelty == true %}
                        <td class="col-md-2"><a class="btn btn-outline-dark"
                               href="{{ path('tea_novelty', {'id': tea.id}) }}"><i class="fas fa-toggle-on"></i> On</a></td>
                    {% else %}
                        <td class="col-md-2"><a class="btn btn-outline-dark"
                               href="{{ path('tea_novelty', {'id': tea.id}) }}"><i class="fas fa-toggle-off"></i> Off</a></td>
                    {% endif %}
                    {% if tea.highlighted == true %}
                        <td class="col-md-3"><a class="btn btn-outline-dark"
                               href="{{ path('tea_highlighted', {'id': tea.id}) }}"><i class="fas fa-toggle-on"></i> On</a></td>
                    {% else %}
                        <td class="col-md-3"><a class="btn btn-outline-dark"
                               href="{{ path('tea_highlighted', {'id': tea.id}) }}"><i class="fas fa-toggle-off"></i> Off</a></td>
                    {% endif %}
                    <td class="col-md-1">
                        <a class="btn btn-outline-dark"
                           href="{{ path('tea_edit', {'id': tea.id}) }}"><i class="fas fa-pencil-alt"></i> Éditer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucun thé enregistré</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}