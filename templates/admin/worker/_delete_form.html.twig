<form class="d-inline" method="post" action="{{ path('worker_delete', {'id': worker.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce membre du personnel?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ worker.id) }}">
    <button class="btn btn-outline-dark"><i class="far fa-trash-alt"></i> Supprimer</button>
</form>
