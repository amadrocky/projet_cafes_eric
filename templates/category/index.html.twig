{% extends 'layoutAdmin.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="admin-title">Liste des catégories</h1>
        <div class="mb-5 mt-5">
            <a class="btn btn-outline-dark" href="{{ path('category_new') }}"><i class="fa fa-plus"></i> Ajouter une nouvelle catégorie</a>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th><i class="fas fa-scroll"></i> Titre</th>
                    <th><i class="fas fa-tools"></i> Action</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td class="col-md-11"> {{ category.title }}</td>
                    <td class="col-md-1">
                        <a type="button" class="btn btn-outline-dark" href="{{ path('category_edit', {'id': category.id}) }}"><i class="fas fa-pencil-alt"></i> Éditer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucune catégorie enregistrée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
